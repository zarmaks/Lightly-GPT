# LightlyGPT Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Specify which OpenAI model to use (default: gpt-3.5-turbo)
# OPENAI_MODEL=gpt-3.5-turbo

# Optional: Set custom ChromaDB persistence directory
# CHROMA_DB_PATH=./chroma_db

# Optional: Set maximum number of images to process at once
# MAX_IMAGES=1000

# Optional: Set CLIP model variant (default: openai/clip-vit-base-patch32)
# CLIP_MODEL=openai/clip-vit-base-patch32

# Development settings
# Set to true to enable debug mode
# DEBUG=false

# Set to true to enable verbose logging
# VERBOSE=false
